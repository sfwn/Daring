{{#foreach posts}}

    <article class="post-index post">
        <header>
            <h2><a href="{{url}}">{{title}}</a></h2>
            <div class="meta">
                {{#author}}
                    <a href="{{url}}">{{name}}</a><
                {{/author}}
                &nbsp;&bull;&nbsp;<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date
                    format="DD MMMM YYYY"}}</time>
                &nbsp;&bull;&nbsp;{{tags prefix=" Filed under "}}
            </div>
        </header>

        <section class="post">
            {{content}}
        </section>
    </article>

{{/foreach}}

{{pagination}}
